
div#tabfield {
  padding-top: 0;
}

.x-tabs-wrap {
  border-bottom:1px solid #ccc;
  padding-top:2px;
}

.x-tabs-strip-wrap {
  width:100%;  
}

.x-tabs-wrap table {
  position:relative;
  top:0; left:0;
  width: auto;
  margin: 0;
  clear: none;
}

.x-tabs-strip td {
  padding: 0 0 0 5px;
  border: none;
}
.x-tabs-strip a, .x-tabs-strip span, .x-tabs-strip em {
  display:block;
}
.x-tabs-strip a {
  text-decoration:none !important;
  -moz-outline: none;
  outline: none;
  cursor:pointer;
}
.x-tabs-strip .x-tabs-text {
  font: bold 11px tahoma,arial,helvetica;
  color:#D34E27;
  overflow:hidden;
  white-space: nowrap;
  cursor:pointer;
  text-overflow: ellipsis;
}
.x-tabs-strip .on .x-tabs-text {
  cursor:default;
  color:#333;
}
.x-tabs-strip .disabled .x-tabs-text {
  cursor:default;
  color:#aaaaaa;
}
.x-tabs-strip .x-tabs-inner {
   padding:4px 10px;  
}

.x-tabs-strip .on .x-tabs-right {
   background: url(/img/interface/tab-sprite.gif) no-repeat right 0;
}
.x-tabs-strip .on .x-tabs-left {
   background: url(/img/interface/tab-sprite.gif) no-repeat 0 -100px;
}
.x-tabs-strip .x-tabs-right {
   background: url(/img/interface/tab-sprite.gif) no-repeat right -50px;
}
.x-tabs-strip .x-tabs-left {
   background: url(/img/interface/tab-sprite.gif) no-repeat 0 -150px;
}

.x-tabs-strip  a {
  position:relative;
  top:1px; left:0;
}

.x-tabs-strip .on a {
  position:relative;
}

.x-tabs-strip .on .x-tabs-inner {
  padding-bottom:5px;
}

.x-tabs-strip .x-tabs-closable .x-tabs-inner{
  padding-right:22px;
  position:relative;
}

.x-tabs-strip .x-tabs-closable .close-icon{
  line-height: 1px;
  font-size:1px;
  background-image:url(/img/interface/tab-close.gif);
  display:block;
  position:absolute;
  right:5px;top:4px;
  width:11px;height:11px;
  cursor:pointer;
}

.x-tabs-strip .on .close-icon{
  background-image:url(/img/interface/tab-close-on.gif);
}

.x-tabs-strip .x-tabs-closable .close-over{
  background-image:url(/img/interface/tab-close-on.gif);
}

.x-tabs-body {
  border: 0;
  padding: .5em;
}
