/* | FORM ELEMENTS 
   +------------------------------------------- */
form {
  width: 750px;
}

form p {
  margin: 0 1em;
}
select, input, textarea {
  font-size: 1em;
}

input[type=text], input[type=password], textarea {
  width: 230px;
}

input[type=image] {
  background-color: transparent;
  border: 0;
}

table.form td textarea {
  width: 100%;
}

input:focus {
  -moz-outline: none;
  opacity: 0.5;
  background: #4CA1D8;
}

textarea, input {
  background: url("/img/interface/bg-input.gif") #fff no-repeat left top;
  border: #cfcfcf 1px solid;
  color: #585858;
  padding: 2px;
}

textarea:focus, input:focus, textarea.focus, input.focus {
  background: url("/img/interface/bg-input_focus.gif") no-repeat left top;
  border: #bababa 1px solid;
  color: #3C3C3C;
  padding: 2px;
  opacity: 1 !important;
}

input[type=submit], input[type=submit]:focus {
  font-weight: bold;
  padding: 5px;
}


textarea {
  margin: 0;
  overflow: auto;
}

label {
  float: left;
  font-weight: bold;
  display: block;
  height: 15px;
  width: 130px;
  padding: 2px;
  cursor: pointer;
}

div.invalid p.form_caption {
  color: #3c3c3c;
  margin: 0 0 0 135px;
  font-size: .85em;
}

div.invalid p.form_caption strong {
 display: block;
}

div.invalid label {
  color: #3c3c3c;
  font-weight: bold !important;
}

div.card_details {
  background-color: #dcdcdc;
  background-position: top left;
  background-repeat: no-repeat;
  border: 1px solid #acacac;
  padding: .7em .5em .5em 3em;
  width: 115px;
  margin: 0 1em;
}

div.visa {
  background-image: url(/img/interface/icons/visa.png);
}

div.mastercard {
  
}

div.discover {
  
}

.caption {
  color: #3c3c3c;
  margin-left: 135px;
  font-size: .85em;
}

.description {
  margin: 0 .5em;
}

fieldset {
  border: 0;
  margin: 0 0 1.5em;
  padding: 0;
}

fieldset.ajax {
  border: solid 1px #ccc;
  background-color: #fff;
  clear: none;
  margin: 0 0 5px 0;
  padding: 0;
  width: 543px;
}

fieldset#login {
  border: solid 1px #efefef;
  margin: 0 auto;
  width: 440px;
  background: url('/img/interface/bg-leftcol.gif') -1px -1px no-repeat;
}

fieldset h3 {
  font-size: 1.1em;
  margin: 0 .5em;
  padding: 0;
}

legend {
  color: #A83F1F;
  font-weight: bold;
  font-size: 1em;
  line-height: .5em;
  letter-spacing: 2px;
  margin: 0 0 0 .75em;
}

fieldset.ajax legend {
  font-size: 1.25em;
  margin-bottom: 22px;
}

fieldset h4 {
  border: solid 1px #efefef;
  background-color: #F9F9F9;
  color: #999;
  font-size: .8em;
  padding: 5px 10px;
  margin: .5em .5em 1em .5em;
  letter-spacing: .15em;
}

fieldset div {
  padding: 0 10px;
  margin-top: 1em;
}

fieldset div#submit {
  border: solid 1px #efefef;
  background: url("/img/interface/bg-form-submit.gif") #ececec repeat left top;
  padding: 5px 10px;
  margin-top: 1.5em;
}

fieldset#login div#submit {
  border-bottom: 0;
}

input[type=text].rr-ttl,
input[type=text].rr-aux {
  width: 40px;
}

input[type=text].rr-data,
input[type=text].rr-name {
  width: 200px;
}

input[type=checkbox] {
  margin: 0;
}


